@model IEnumerable<ShoppingList.Models.Item>
@{
    ViewData["Title"] = "Creating List";
    var user = ViewBag.User as ShoppingList.Models.User;
}

<h2>Creating Shopping List @if(user != null) {
    <span>for @user.Name</span>
        }
</h2>
<div>
    <h3>Add new item</h3>
    <form asp-action="Create" method="post">
        <input type="hidden" name="userId" value="@user?.Id" />
        <div class="form-group">
            <label>Product Name</label>
            <input type="text" name="ProductName" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Description</label>
            <input type="text" name="ProductDescription" class="form-control" />
        </div>
        <div class="form-group">
            <label>Priority</label>
            <input type="text" name="ProductSorted" class="form-control"/>
        </div>
        <div class="form-group">
            <label>Price</label>
            <input type="number" step="0.01" name="Price" class="form-control" />
        </div>        
        <button type="submit" class="btn btn-success">Add</button>
    </form>
</div>

